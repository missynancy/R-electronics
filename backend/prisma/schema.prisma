generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}


model Category {
  id Int @id @default(autoincrement())
  name String @unique
  products Product[]
}

model Product {
  id Int @id @default(autoincrement())
  name String
  cost Int
  description String?
  image Bytes?
  category Category  @relation(fields: [categoryName], references: [name])
  categoryName String
}

model Oders {
  code Int @id
  customerName String
  products String
  email String 
  shippingAddress String
}

model Contact {
  id Int @id @default(autoincrement())
  customerName String
  mesage String
  contactInfo String
}
